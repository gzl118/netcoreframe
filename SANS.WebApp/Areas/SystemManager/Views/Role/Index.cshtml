@{
    Layout = "~/Views/Shared/Ordinary.cshtml";
    ViewData["Title"] = "角色管理";

}
@section css{
    <link href="~/lib/layui/css/layui.css" rel="stylesheet" />
    <link href="~/css/public.css" rel="stylesheet" />
}
<div style="padding:20px;">
    <form class="layui-form">
        <blockquote class="layui-elem-quote quoteBox">
            <div class="layui-form">
                <div class="layui-inline">
                    <div class="layui-input-inline">
                        <input type="text" class="layui-input searchVal" style="font-size:12px" placeholder="角色名称" />
                    </div>
                    <a class="layui-btn search_btn" data-type="reload">搜索</a>
                </div>
                <div class="layui-inline">
                    <a class="layui-btn layui-btn-normal addNews_btn">添加角色</a>
                </div>
                <div class="layui-inline">
                    <a class="layui-btn layui-btn-danger layui-btn-normal delAll_btn">批量删除</a>
                </div>
            </div>
        </blockquote>
        <table id="roleList" lay-filter="roleList"></table>
        <!--操作-->
        <script type="text/html" id="roleListBar">
            <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
            <a class="layui-btn layui-btn-xs layui-btn-danger" lay-event="del">删除</a>
            <a class="layui-btn layui-btn-xs layui-btn-warm roleassignment" lay-event="roleassignment">分配用户</a>
            @*<a class="layui-btn layui-btn-xs layui-btn-warm roleassignment" lay-event="usergroupassignment">分配用户组</a>*@
        </script>
    </form>
</div>
<script src="~/lib/main.js"></script>
<script src="~/lib/require/require.js" data-main="../js/Areas/SystemManager/Role/RoleCtrl"></script>