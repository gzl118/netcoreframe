@{
    Layout = "~/Views/Shared/Ordinary.cshtml";
    ViewData["Title"] = "选择用户";

}
@section css{
    <link href="~/lib/layui/css/layui.css" rel="stylesheet" />
}
<div style="padding:20px;">
    <blockquote class="layui-elem-quote quoteBox">
        <div class="layui-form">
            <div class="layui-inline">
                <div class="layui-input-inline">
                    <input type="text" class="layui-input searchVal" style="font-size:12px" placeholder="账号,手机号,QQ,微信,昵称" />
                </div>
                <a class="layui-btn search_btn" data-type="reload">搜索</a>
            </div>
        </div>
    </blockquote>
    <table id="userList" lay-filter="userList"></table>
    <button class="layui-btn layui-btn-warm" style="float:right;margin-right:20px;" id="SaveRoleUser">确定</button>
</div>
<script src="~/lib/layui/layui.js"></script>
<script src="~/js/Areas/SystemManager/Role/SelectUser.js"></script>
