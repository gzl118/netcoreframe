                        </dl>
                    </li>
                </ul>*@
            <!-- 顶部右侧菜单 -->
            <ul class="layui-nav top_menu">
                <li class="layui-nav-item" id="userInfo">
                    <a href="javascript:;"><img src="@Model.UserAvatar" class="layui-nav-img userAvatar" id="userAvatar" width="35" height="35" onerror="this.src='/images/admin.png'"><cite class="adminName">@Model.UserNikeName</cite></a>
                    <dl class="layui-nav-child">
                        <dd><a href="javascript:;" data-url="/User/UserInfo"><i class="seraph icon-ziliao" data-icon="icon-ziliao"></i><cite>个人资料</cite></a></dd>
                        <dd><a href="javascript:;" data-url="/User/UserChagePwd"><i class="seraph icon-xiugai" data-icon="icon-xiugai"></i><cite>修改密码</cite></a></dd>
                        <dd><a href="/User/Login" class="signOut"><i class="seraph icon-tuichu"></i><cite>退出</cite></a></dd>
                    </dl>
                </li>
            </ul>
        </div>
    </div>
    <!-- 左侧导航 -->
    <div class="layui-side layui-bg-black">
        <div class="layui-side-scroll">
            <div class="user-photo">
                <a class="img" title="我的头像"><img src="@Model.UserAvatar" class="userAvatar" onerror="this.src='/images/admin.png'"></a>
                <p>您好！<span class="userName">@Model.UserNikeName</span>, 欢迎登录</p>
            </div>
            <div class="left-nav">
                <div id="side-nav">
                    @await Component.InvokeAsync("Navigation")
                </div>
            </div>
        </div>
    </div>
    <!-- 右侧内容 -->
    <div class="layui-body layui-form">
        <div class="layui-tab mag0" lay-filter="bodyTab" lay-allowClose="true" id="top_tabs_box" style="margin-top:0px;">
            <ul class="layui-tab-title top_tab" id="top_tabs">
                <li class="layui-this" lay-id=""><i class="layui-icon">&#xe68e;</i><cite id="houtaihome">首页</cite></li>
            </ul>
            <ul class="layui-nav closeBox">
                <li class="layui-nav-item">
                    <a href="javascript:;"><i class="layui-icon caozuo">&#xe643;</i> 页面操作</a>
                    <dl class="layui-nav-child">
                        <dd><a href="javascript:;" class="refresh refreshThis"><i class="layui-icon">&#x1002;</i> 刷新当前</a></dd>
                        <dd><a href="javascript:;" class="closePageOther"><i class="seraph icon-prohibit"></i> 关闭其他</a></dd>
                        <dd><a href="javascript:;" class="closePageAll"><i class="seraph icon-guanbi"></i> 关闭全部</a></dd>
                    </dl>
                </li>
            </ul>
            <div class="layui-tab-content clildFrame">
                <div class="layui-tab-item layui-show">
                    <iframe src="" id="iframeHome"></iframe>
                </div>
            </div>
        </div>
    </div>
    <!-- 底部 -->
    <div class="layui-footer footer">
        <p><span style="color: black;">copyright 2018</span>
    </div>
</div>
<!-- 移动导航 -->
