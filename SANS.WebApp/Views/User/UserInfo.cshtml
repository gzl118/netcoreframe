
@{
    Layout = "~/Views/Shared/Ordinary.cshtml";
    ViewData["Title"] = "个人资料";

}
@section css{
    <link href="~/lib/layui/css/layui.css" rel="stylesheet" />
    <link href="~/css/public.css" rel="stylesheet" />
}
<div class="childrenBody">
    <form class="layui-form layui-row">
        <div class="layui-col-md3 layui-col-xs12 user_right">
            <div class="layui-upload-list">
                <img class="layui-upload-img layui-circle userFaceBtn userAvatar" id="userFace" src="@Url.Content(ViewBag.UserInfo.UserAvatar)">
            </div>
            <button type="button" class="layui-btn layui-btn-primary userFaceBtn"><i class="layui-icon">&#xe67c;</i> 掐指一算，我要换一个头像了</button>
        </div>
        <div class="layui-col-md6 layui-col-xs12">
            <input type="hidden" class="userId" value="@ViewBag.UserInfo.UserId" />
            <input type="hidden" class="userGroupId" value="@ViewBag.UserInfo.UserGroupId" />
            <div class="layui-form-item">
                <label class="layui-form-label">用户名</label>
                <div class="layui-input-block">
                    <input type="text" value="@ViewBag.UserInfo.UserName" disabled class="layui-input layui-disabled userName" />
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">昵称</label>
                <div class="layui-input-block">
                    <input type="text" value="@ViewBag.UserInfo.UserNikeName" disabled  class="layui-input layui-disabled userNikeName" />
                </div>
            </div>
            <div class="layui-form-item" pane="">
                <label class="layui-form-label">性别</label>
                <div class="layui-input-block userSex">
                    @{
                        if (ViewBag.UserInfo.UserSex == 1)
                        {
                            <input type="radio" name="sex" value="1" title="男" checked="" />
                            <input type="radio" name="sex" value="2" title="女" />
                        }
                        else
                        {
                            <input type="radio" name="sex" value="1" title="男" />
                            <input type="radio" name="sex" value="2" title="女" checked="" />
                        }
                    }
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">出生日期</label>
                <div class="layui-input-block">
                    <input type="text" value="@Convert.ToDateTime(ViewBag.UserInfo.UserBirthday).ToString("yyyy-MM-dd")" placeholder="选择出生日期" class="layui-input userBirthday" />
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">手机号码</label>
                <div class="layui-input-block">
                    <input type="tel" value="@ViewBag.UserInfo.UserPhone" placeholder="请输入手机号码" lay-verify="phone" class="layui-input userPhone" />
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">QQ</label>
                <div class="layui-input-block">
                    <input type="text" value="@ViewBag.UserInfo.UserQq" placeholder="请输入QQ" lay-verify="qq" class="layui-input userQq" />
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">微信</label>
                <div class="layui-input-block">
                    <input type="text" value="@ViewBag.UserInfo.UserWx" placeholder="请输入微信" class="layui-input userWx" />
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">邮箱</label>
                <div class="layui-input-block">
                    <input type="text" value="@ViewBag.UserInfo.UserEmail" placeholder="请输入邮箱" lay-verify="email" class="layui-input userEmail" />
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">自我评价</label>
                <div class="layui-input-block">
                    <textarea placeholder="请输入内容" value="@ViewBag.UserInfo.Note" class="layui-textarea note"></textarea>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-input-block">
                    @Html.AntiForgeryToken()
                    <button class="layui-btn" lay-submit="" lay-filter="changeUser">立即提交</button>
                    <button type="reset" class="layui-btn layui-btn-primary">重置</button>
                </div>
            </div>
        </div>
    </form>
</div>
<script src="~/lib/main.js"></script>
<script src="~/lib/require/require.js" data-main="../js/User/UserInfo.js"></script>

